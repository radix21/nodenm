/* vertical alignment styles */

.col-top 
    vertical-align top

.col-middle 
    vertical-align middle

.col-bottom 
    vertical-align bottom

/* columns of same height styles */

.row-xs-full-height 
    height 100%

.col-xs-full-height
    height 100%

.row-same-height 
    display table
    width 100%
    /* fix overflow */
    table-layout fixed

.col-xs-height 
    display table-cell
    float none !important

@media (min-width: 768px) 
    .col-sm-height 
        display table-cell
        float none !important
        
    .row-sm-full-height 
        height 100%

    .col-sm-full-height
        height 100%
  

@media (min-width: 992px) 
    .col-md-height 
        display table-cell
        float none !important
        
    .row-md-full-height 
        height 100%

    .col-md-full-height
        height 100%
  

@media (min-width: 1200px) 
    .col-lg-height 
        display table-cell
        float none !important
        
    .row-lg-full-height 
        height 100%

    .col-lg-full-height
        height 100%
  

